<%- include header %>
<% if (imgSrc) { %>
  <div class='flash-info'>复制一下内容插入文章，即可插入刚才上传的图片<br/><br/>![](<%= imgSrc %>)</div>
<% } %>

  <section class="page">
    <aside class="upload-files">
      <!-- 上传图片 -->
      <form action="/editimg/<%= post._id %>" method='POST' enctype='multipart/form-data'>
        <input id="edit-inputImg" type="file" name='img' multiple>
        <br>
        <p>预览图片正确，请上传后再使用</p>
         <input type="submit" value='上传最新预览的图片'/>
      </form>
      <nav class="img-list">
        <ul id="edit-imgList">
        </ul>
      </nav>
    </aside>

    <article class="upload-post">
      <form action="/editpage/<%= post._id%>" method='POST'>
        <input class='post-title' type="text" name='title' placeholder='文章标题' value="<%- post.title%>" required><br/>
        <P>请去掉markdown语法符号前的空格&nbsp;&nbsp;<a href="http://www.jianshu.com/p/q81RER">快速markdown使用文档</a></P>
        <textarea name="content" class="post-cont" id="editarea"  cols="78"  rows="26" ><%- post.content %>
        </textarea><br/>

        <input type="submit" value='保存修改'>
      </form>
    </article>
    <output id="list"></output>
  </section>

<%- include footer %>
